<!DOCTYPE html>
@{
    ViewData["Title"] = "Login";
    ViewData["HideSidebar"] = true;
    string domain = "@desototechnologies.com";
}
<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Template Main CSS File -->
    @* <link rel="stylesheet" href="~/CoreWebApp.styles.css" asp-append-version="true" /> *@
</head>

<body>
    <section class="sectioncard">
        <div class="container h-4 pt-5" id="mydiv">
            <div class="d-flex justify-content-end">
                @* <div class="coL col-xl-10"> *@
                <div class="col-12">
                    <div class="card m-y p-4" style="border-radius: 1rem;">
                        <div class="row">
                            <div class="col-md-4 col-4 d-none d-md-block">
                                <img src="~/img/desktop-wallpaper-iphone-spiritual-background-cool-spiritual.jpg"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-3 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form class="needs-validation">

                                        <div class="d-flex justify-content-center mb-4 pb-1">
                                            <i class="fas fa-cubes fa-2x" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0"><img src="~/img/desotologo.png" /></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="Email"></label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="Username" placeholder="Username" onkeydown="return /[a-zA-Z0-9_]/i.test(event.key)" autocomplete="off" required>
                                                <div class="input-group-append">
                                                    <span class="input-group-text" id="Domain">@domain</span>
                                                </div>
                                            </div>
                                            <div id="#" class="invalid-tooltip">Please fill out this field.</div>
                                        </div>
                                        <br />
                                        <div class="col-md-12">
                                            <input type="password" id="Password" class="form-control" placeholder="password" required>
                                            <label class="form-label" for="Password"></label>
                                        </div>
                                        <br />

                                        <button class="btn btn-primary w-100" type="submit" onclick="Login();">Login</button>

                                        <div class="col-12">
                                            <p class="small mb-0">Don't have account? <a href="/Home/Registration">Create an account</a></p>
                                        </div>





                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <script src="~/js/login.js"></script>
    @*  <script src="~/js/login.js" asp-append-version="true"></script> *@

</body>



</html>