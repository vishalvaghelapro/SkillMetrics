                                    </tr>
                                </thead>
                </table>
                <!-- Button trigger modal -->
                <!-- Modal -->
                <div id="EmployeeMadal" class="madal fade modal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="text-primary modal-title">Edit Employee</h1>
                                @*<button class="btn btn-sm btn-outline-danger" aria-label="Close"></button> *@
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-row">
