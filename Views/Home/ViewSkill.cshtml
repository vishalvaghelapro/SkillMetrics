            <h3 class="card-title">Employee Data</h3> 
                <table id="empDataTable" class="table table-bordered">
                                <thead>
                                    <tr class="table-dark">
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th>Role</th>
                                        <th>SkillName</th>
                                        <th>ProficiencyLevel</th>
                                        <th>Edit</th>
