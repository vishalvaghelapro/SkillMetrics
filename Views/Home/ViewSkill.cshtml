                                        <label for="ESId"></label>
                                        <input type="hidden" class="form-control" id="ESId">
                                        <div class="">
                                            <label for="SKillName">Skill</label>
                                            <input type="text" class="form-control" id="SkillName">
                                        </div><br />
                                        <div class="form-group col-md mt-2 mb-3">
                                            <label for="proficiencyLevel">Proficiency Level&nbsp;&nbsp;&nbsp;&nbsp;:</label>
                                            <div class="form-check-inline">
                                                <input class="form-check-input" type="radio" name="Proficiency" id="proficiencyLevel" for="proficiencyLevel" value="Beginner">
                                                <label class="form-check-label" for="beginnerRadio">
                                                    Beginner
                                                </label>
                                            </div>
                                            <div class="form-check-inline">
                                                <input class="form-check-input" type="radio" name="Proficiency" id="proficiencyLevel" for="proficiencyLevel" value="Intermediate">
                                                <label class="form-check-label" for="intermediateRadio">
                                                    Intermediate
                                                </label>
                                            </div>
                                            <div class="form-check-inline">
                                                <input class="form-check-input" type="radio" name="Proficiency" id="proficiencyLevel" for="proficiencyLevel" value="Expert">
                                                <label class="form-check-label" for="expertRadio">
                                                    Expert
                                                </label>
                                            </div>
                                            <button type="button" class="justify-content-center btn btn-primary mt-4" onclick="UpdateEmpBtn();" id="UpdateBtn">Update</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
           </div>
        </div>

