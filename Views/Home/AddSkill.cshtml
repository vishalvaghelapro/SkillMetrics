@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-9 col-xl-9 col-xxl-9">
                <div class="card border-2 shadow-sm rounded-4">
                    <div class="card-body p-3 p-md-12 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">

                                    <h1 class="h3 d-flex justify-content-center">Add Skill</h1>

                                </div>
                            </div>
                        </div>



                        <form class="needs-validation" novalidate>
                            <div class="col-md mt-4 mb-4">
                                <label for="skill" class="col-sm-2 col-form-label">Skill Name:</label>
                                <div class="col-md-10 position-relative">
                                    <input type="text" name="name" class="form-control" value="" required>
                                    @*  <div class="invalid-tooltip">Please enter your Skills</div> *@
                                </div>
                            </div>

                            <div class="col-md mt-4 mb-3">
                                <label for="proficiency">Proficiency Level&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                                <div class="form-check-inline position-relative">
                                    <input class="form-check-input" type="radio" name="proficiency" id="beginnerRadio" value="Beginner" required>
                                    <label class="form-check-label" for="beginnerRadio">Beginner</label>

                                    @*      <div class="invalid-tooltip">Select proficiency level</div> *@
                                </div>
                                <div class="form-check-inline position-relative">
                                    <input class="form-check-input" type="radio" name="proficiency" id="intermediateRadio" value="Intermediate" required>
                                    <label class="form-check-label" for="intermediateRadio">Intermediate</label>
                                    @*            <div class="invalid-tooltip">Select proficiency level</div> *@
                                </div>
                                <div class="form-check-inline position-relative">
                                    <input class="form-check-input" type="radio" name="proficiency" id="expertRadio" value="Expert" required>
                                    <label class="form-check-label" for="expertRadio">Expert</label>
                                    @*    <div class="invalid-tooltip">Select proficiency level</div> *@
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success save-btn">Add</button>
                        </form>


                        <br />
                        <table id="myForm" class="table table-bordered data-table">
                            <thead>
                            <th>SkillName</th>
                            <th>Proficiency</th>
                            <th>Delete</th>
                            </thead>


                            <tbody>
                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-primary save-btn" onclick="AddSkill();">Submit</button>
                    </div>


                </div>
            </div>
        </div>
    </div>

</section>

@section scripts{


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib//jquery/dist/jquery.min.js"></script>
    <script src="~/js/dropdown.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/addSkill.js"></script>


}
