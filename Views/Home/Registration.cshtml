@{
    ViewData["Title"] = "Registration";
    string domain = "@desototechnologies.com";

}


<section class="p-2 p-md-1">
    <div class="col-lg-8">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-center">Registration Form</h5>
                <form class="row g-3 needs-validation" novalidate>

                    <div class="col-md-12 mb-3 position-relative">
                        <label for="FName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="FName" required>
                        <div class="invalid-feedback">
                            Please fill out this filed
                        </div>
                    </div>
                    <div class="col-md-12 mb-3 position-relative">
                        <label for="LName">Last name</label>
                        <input type="text" class="form-control" id="LName" required>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-group position-relative">
                        <label for="Email">Email:</label>
                        <div class="input-group ">
                            <input type="text" class="form-control" id="Username" placeholder="Username" onkeydown="return /[a-zA-Z0-9_]/i.test(event.key)" autocomplete="off" required>
                            <div class="input-group-append">
                                <span class="input-group-text" id="Domain">@domain</span>
                            </div>
                            <div id="#" class="invalid-feedback">Please fill out this field.</div>
                        </div>

                    </div>
                    <div class="col-md-12 mb-3 position-relative">
                        <label for="DropDepartment">Department</label>
                        <select id="DropDepartment" class="form-control" required>
                            <option selected disabled value="">Select Department...</option>
                            <option>...</option>
                        </select>
                        <div class="invalid-feedback">Please select a department.</div>
                    </div>

                    <div class="form-group col-md mt-3 mb-3 position-relative">
                        <label for="Role1">Role:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                        <div class="form-check-inline">
                            <input class="form-check-input" type="radio" name="Role" id="Role1" value="Manager" required>
                            <label class="form-check-label" for="Role1">Manager</label>
                        </div>
                    
                        <div class="form-check-inline">
                            <input class="form-check-input" type="radio" name="Role" id="Role1" value="Employee" required>
                            <label class="form-check-label" for="Role1">Employee</label>
                        </div>
                        <div class="form-check-inline">
                            <input class="form-check-input" type="radio" name="Role" id="Role2" value="Admin" required>
                            <label class="form-check-label" for="Role2">Admin</label>
                        </div>
                        <div class="invalid-feedback">Please select a role.</div>
                    </div>

                    <div class="col-md-12 mb-3 position-relative">
                        <label for="Password">Password</label>
                        <input type="password" id="Password" class="form-control" required>
                        <div class="invalid-feedback">Please enter a password.</div>
                    </div>

                    <div class="col-12 mt-3 col d-flex justify-content-center">
                        <button id="SubmitRegForm" class="btn btn-primary" type="submit" onclick="AddEmpData();">Submit</button>
                    </div>

                </form>
                <div class="col-12 pt-3 text-center">
                    <p class="small mb-0">
                        <b>Already have an account?</b> <a href="/Home/Login" class="text-decoration-none">
                            <i class="bi bi-box-arrow-left"></i>
                            <span>LogIn</span>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>



@section scripts{
    <script src="~/js/dropdown.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/addSkill.js"></script>
}

