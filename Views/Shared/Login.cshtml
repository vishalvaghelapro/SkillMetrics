@{
    ViewData["Title"] = "Login Page";
}

<section class="pt-xl-5">
    <div class="container h-5 pt-4">
        <div class="row d-flex justify-content-center">
            @* <div class="coL col-xl-10"> *@
            <div class="col-10">
                <div class="card m-y p-4" style="border-radius: 1rem;">
                    <div class="row">
                        <div class="col-md-4 col-4 d-none d-md-block">
                            <img src="~/img/desktop-wallpaper-iphone-spiritual-background-cool-spiritual.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-3 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form>

                                    <div class="d-flex justify-content-center mb-4 pb-1">
                                        <i class="fas fa-cubes fa-2x" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0"><img src="~/img/desotologo.png" /></span>
                                    </div>

                                    <div class="form-outline mb-2">
                                        <input type="text" id="formAdmin" class="form-control" placeholder="Firstname Lastname" />
                                        <label class="form-label" for="formAdmin"></label>
                                    </div>
    
                                    <div class="form-outline mb-4">
                                        <input type="password" id="formPassword" class="form-control" placeholder="Password" />
                                        <label class="form-label" for="formPassword"></label>
                                    </div>
                               
                                    <div class="col d-flex justify-content-center">
                                        <button type="button" onclick="Login();" class="btn btn-primary justify-content-center">Sign In</button>
                                    </div>
                                    <br />
                                    <div class="col d-flex justify-content-center">
                                      
                                        <p>Not a User? &nbsp;&nbsp;<button type="button" class="btn .btn-lg btn-success text-white"> <a href="/home/Registration" class="text-white" style="text-decoration:none">Register</a></button></p>
                                    </div>
                                  
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
